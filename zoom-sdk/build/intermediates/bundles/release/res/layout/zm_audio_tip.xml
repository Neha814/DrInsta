<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="200dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/btnMuteVoIP"
        style="@style/ZMSettingOptionButton.NoLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:gravity="left|center_vertical"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:text="@string/zm_btn_mute_voip" />

    <LinearLayout
        android:id="@+id/btnDisconnectVoIP"
        style="@style/ZMSettingOptionButton.NoLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:gravity="left|center_vertical"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:weightSum="1" >

        <TextView
            style="@style/ZMSettingOptionButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:clickable="false"
            android:duplicateParentState="true"
            android:focusable="false"
            android:gravity="left"
            android:text="@string/zm_btn_disconnect_voip" />

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/btnSwitchAudioSource"
        style="@style/ZMSettingOptionButton.NoLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:gravity="left|center_vertical"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:weightSum="1" >

        <TextView
            style="@style/ZMSettingOptionButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:clickable="false"
            android:duplicateParentState="true"
            android:focusable="false"
            android:gravity="left"
            android:text="@string/zm_btn_switch_audio_source" />

    </LinearLayout>
    
    <TextView
        android:id="@+id/btnMutePhone"
        style="@style/ZMSettingOptionButton.NoLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:gravity="left|center_vertical"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:weightSum="1"
        android:text="@string/zm_btn_mute_phone" />

    <LinearLayout
        android:id="@+id/btnCallViaVoIP"
        style="@style/ZMSettingOptionButton.NoLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:gravity="left|center_vertical"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:weightSum="1" >

        <TextView
            style="@style/ZMSettingOptionButton"
            android:id="@+id/txtCallViaVoIP"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:clickable="false"
            android:duplicateParentState="true"
            android:focusable="false"
            android:gravity="left"
            android:text="@string/zm_btn_call_via_voip" />

        <ProgressBar
            android:id="@+id/progressCallVoIP"
            style="@style/ZMProgressBar.Small"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/btnDialIn"
        style="@style/ZMSettingOptionButton.NoLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:text="@string/zm_btn_dial_in" />
    
    <TextView
        android:id="@+id/btnCallMe"
        style="@style/ZMSettingOptionButton.NoLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:text="@string/zm_callout_btn_callme_by_phone" />

</LinearLayout><!-- From: file:/home/sandeep/Documents/sandeep%20Project%20/live%20working%20app%20/workspace/Drinsta_WS/zoom-sdk/res/layout/zm_audio_tip.xml -->